<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d1d1d1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="15dp"
        android:layout_marginLeft="20dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"

            >
            <Button
                android:id="@+id/reterieve_back"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:background="@drawable/white_back"
                android:layout_marginBottom="20dp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="找回密码"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:layout_marginBottom="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入手机号码"
            android:textColor="#FFE4B5"
            android:textSize="14sp"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/retrieve_tel"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textColorHint="#101000"
            android:textSize="14sp"
            android:gravity="center"
            android:hint="输入手机号码"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_retrieve"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入手机验证码"
            android:textColor="#FFE4B5"
            android:textSize="14sp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/retrieve_yzm"
                android:layout_width="85dp"
                android:layout_height="29dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:hint="手机验证码"
                android:gravity="center"
                android:textColorHint="#101000"
                android:textSize="14sp"
                android:background="@drawable/shape_left"/>
            <Button
                android:id="@+id/retrieve_tel_yzm"
                android:layout_width="105dp"
                android:layout_height="29dp"
                android:text="获取手机验证码"
                android:textColor="#87CEFA"
                android:background="@drawable/retrieve_right"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置新登录密码"
            android:textColor="#FFE4B5"
            android:textSize="14sp"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/retrieve_password"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textColorHint="#101000"
            android:textSize="14sp"
            android:gravity="center"
            android:hint="设置新登录密码"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_retrieve"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认新的登录密码"
            android:textColor="#FFE4B5"
            android:textSize="14sp"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/retrieve_repassword"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textColorHint="#101000"
            android:textSize="14sp"
            android:gravity="center"
            android:hint="确认新登录密码"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_retrieve"/>

        <Button
            android:id="@+id/retrieve_y"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:textSize="14sp"
            android:gravity="center"
            android:text="确定"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_register"/>

    </LinearLayout>
</ScrollView>

