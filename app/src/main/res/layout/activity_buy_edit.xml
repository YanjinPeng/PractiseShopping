<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home_mc_act"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#00ddff"
        android:paddingTop="5dp"
        >
        <Button
            android:id="@+id/title_back_buy_edit"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/white_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="卖出"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:background="#003355">
        <Button
            android:id="@+id/add_bank"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="+请添加银行卡"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#003355"
        android:text="     请选择卖出金额"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#003355"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/mc_500"
                android:layout_width="115dp"
                android:layout_height="40dp"
                android:text="500"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_sel"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"/>
            <Button
                android:id="@+id/mc_5000"
                android:layout_width="115dp"
                android:layout_height="40dp"
                android:text="5000"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_sel"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/mc_1000"
                android:layout_width="115dp"
                android:layout_height="40dp"
                android:text="1000"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_sel"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"/>
            <Button
                android:id="@+id/mc_10000"
                android:layout_width="115dp"
                android:layout_height="40dp"
                android:text="10000"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_sel"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/mc_3000"
                android:layout_width="115dp"
                android:layout_height="40dp"
                android:text="3000"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_sel"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"/>
            <Button
                android:id="@+id/mc_30000"
                android:layout_width="115dp"
                android:layout_height="40dp"
                android:text="30000"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_sel"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5">
        <EditText
            android:id="@+id/buy_edit"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="描述（注意：不能输入表情）"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#003355"
        android:orientation="vertical">

        <Button
            android:id="@+id/buy_paying"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/shapebtn"
            android:text="创建订单" />
    </LinearLayout>

</LinearLayout>