<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="#d1d1d1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户注册"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:layout_marginBottom="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入昵称"
            android:textColor="#FFE4B5"
            android:textSize="14sp"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/registe_name"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textColorHint="#101000"
            android:textSize="14sp"
            android:gravity="center"
            android:hint="昵称"
            android:layout_marginTop="10dp"
            android:background="@drawable/register_edit"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入手机号码"
            android:textColor="#FFE4B5"
            android:textSize="14sp"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/registe_tel"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textColorHint="#101000"
            android:textSize="14sp"
            android:gravity="center"
            android:hint="输入手机号码"
            android:layout_marginTop="10dp"
            android:background="@drawable/register_edit"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入右侧验证码"
            android:textColor="#FFE4B5"
            android:textSize="14sp"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/registe_yzm"
                android:layout_width="100dp"
                android:layout_height="29dp"
                android:textColorHint="#101000"
                android:textSize="14sp"
                android:gravity="center"
                android:hint="输入验证码"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/register_edit"/>
            <ImageView
                android:id="@+id/random_code"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="#888888"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入手机验证码"
            android:textColor="#FFE4B5"
            android:textSize="14sp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/registe_tel_yzm_edit"
                android:layout_width="85dp"
                android:layout_height="29dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:hint="手机验证码"
                android:gravity="center"
                android:textColorHint="#101000"
                android:textSize="14sp"
                android:background="@drawable/register_left"/>
            <Button
                android:id="@+id/registe_tel_yzm"
                android:layout_width="105dp"
                android:layout_height="29dp"
                android:text="获取手机验证码"
                android:textColor="#87CEFA"
                android:background="@drawable/register_right"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入登录密码"
            android:textColor="#FFE4B5"
            android:textSize="14sp"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/registe_password"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textColorHint="#101000"
            android:textSize="14sp"
            android:gravity="center"
            android:hint="请输入登录密码"
            android:layout_marginTop="10dp"
            android:background="@drawable/register_edit"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="再次输入登录密码"
            android:textColor="#FFE4B5"
            android:textSize="14sp"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/registe_repassword"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textColorHint="#101000"
            android:textSize="14sp"
            android:gravity="center"
            android:hint="再次输入密码"
            android:layout_marginTop="10dp"
            android:background="@drawable/register_edit"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入推荐人号码"
            android:textColor="#FFE4B5"
            android:textSize="14sp"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/registe_tj_tel"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textColorHint="#101000"
            android:textSize="14sp"
            android:gravity="center"
            android:hint="推荐人手机号码"
            android:layout_marginTop="10dp"
            android:background="@drawable/register_edit"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入您的交易密码"
            android:textColor="#FFE4B5"
            android:textSize="14sp"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/registe_pay_password"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textColorHint="#101000"
            android:textSize="14sp"
            android:gravity="center"
            android:hint="交易密码"
            android:layout_marginTop="10dp"
            android:background="@drawable/register_edit"/>
        <Button
            android:id="@+id/registe_button"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:textSize="14sp"
            android:gravity="center"
            android:text="注册"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_register"/>

        <Button
            android:id="@+id/registe_back"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:textSize="14sp"
            android:gravity="center"
            android:text="已有账号?返回登录"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/shape_register"/>

    </LinearLayout>
</ScrollView>

