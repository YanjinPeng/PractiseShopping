<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pay_account_r"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="30dp"
        android:background="#ffffff"

        >
        <Button
            android:id="@+id/shut_back"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_alignLeft="@+id/textview_layout"
            android:text="X"
            android:background="@drawable/white_back_style"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/shut_back"
            android:text="请输入支付密码"
            android:textSize="26sp"
            android:textColor="#111111"
            android:layout_marginTop="10dp"
           />

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="#ff7f24"
            android:layout_marginTop="0.5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/shut_back"/>
        <LinearLayout
            android:id="@+id/pay_goods_sth"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:padding="5dp"
            android:layout_below="@+id/shut_back"
            android:layout_alignLeft="@+id/textview_layout"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/pay_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详细用途"
                android:textSize="20sp"
                android:textColor="#222222"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/pay_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ 19.99"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#111111"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="#0044ff"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/pay_goods_sth"/>

        <LinearLayout
            android:id="@+id/textview_layout"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_below="@+id/pay_goods_sth"
            >
            <TextView
                android:id="@+id/password_t1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textSize="30sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:background="@drawable/password_b"
                android:text=""
                android:inputType="numberPassword"
                />
            <TextView
                android:id="@+id/password_t2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textSize="30sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:background="@drawable/password_b"
                android:text=""
                android:inputType="numberPassword"
                />
            <TextView
                android:id="@+id/password_t3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textSize="30sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:background="@drawable/password_b"
                android:text=""
                android:inputType="numberPassword"
                />
            <TextView
                android:id="@+id/password_t4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textSize="30sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:background="@drawable/password_b"
                android:text=""
                android:inputType="numberPassword"
                />
            <TextView
                android:id="@+id/password_t5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textSize="30sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:background="@drawable/password_b"
                android:text=""
                android:inputType="numberPassword"
                />
            <TextView
                android:id="@+id/password_t6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textSize="30sp"
                android:textColor="#000000"
                android:gravity="center"
                android:text=""
                android:inputType="numberPassword"
                android:layout_gravity="center_vertical"
                android:background="@drawable/password_b"
                />
        </LinearLayout>
    </RelativeLayout>



    <LinearLayout
        android:id="@+id/input_number"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/number_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="25sp"
                android:gravity="center"
                android:background="@drawable/white_back_style"/>
            <Button
                android:id="@+id/number_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="4"
                android:background="@drawable/white_back_style"
                android:textSize="25sp"
                android:gravity="center" />
            <Button
                android:id="@+id/number_7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/white_back_style"                android:layout_weight="1"
                android:text="7"
                android:textSize="25sp"
                android:gravity="center" />
            <Button
                android:id="@+id/clean_all"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center"
                android:text="清空"
                android:background="@drawable/white_back_style"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/number_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="25sp"
                android:gravity="center"
                android:background="@drawable/white_back_style"/>
            <Button
                android:id="@+id/number_5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="5"
                android:textSize="25sp"
                android:gravity="center"
                android:background="@drawable/white_back_style"/>
            <Button
                android:id="@+id/number_8"
                android:background="@drawable/white_back_style"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="8"
                android:textSize="25sp"
                android:gravity="center" />
            <Button
                android:id="@+id/number_0"
                android:background="@drawable/white_back_style"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="25sp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/number_3"
                android:background="@drawable/white_back_style"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="25sp"
                android:gravity="center" />

            <Button
                android:id="@+id/number_6"
                android:background="@drawable/white_back_style"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="6"
                android:textSize="25sp" />
            <Button
                android:id="@+id/number_9"
                android:background="@drawable/white_back_style"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="9"
                android:textSize="25sp"
                android:gravity="center"
                />
            <Button
                android:id="@+id/number_delete1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center"
                android:text="删除"
                android:textColor="#000000"
                android:background="@drawable/white_back_style"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>