<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#003355">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/mine_inform"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:paddingTop="15dp"
            android:background="@drawable/mine_icon">
            <TextView
                android:id="@+id/lvpay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LVpay"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:id="@+id/touxiang"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/touxiang"
                android:layout_below="@id/lvpay"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/textname"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/touxiang"
                android:text="UID:0"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/textlv"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/textname"
                android:text="普通等级"
                android:textColor="#ffffff"
                android:layout_marginTop="5dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="10dp"
            android:background="#003355">
            <TextView
                android:id="@+id/mine_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="会员资料设置"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="20sp"
                />

            <Button
                android:id="@+id/button_nc"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/nicheng"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/mine_set"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:text="昵称"
                android:gravity="center"
                android:layout_below="@+id/button_nc"
                android:layout_alignParentLeft="true"
                android:textColor="#d1d1d1"/>


            <Button
                android:id="@+id/button_dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/dianpu"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/button_nc"
                android:layout_marginTop="40dp"
                />
            <TextView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:text="店铺"
                android:gravity="center"
                android:layout_below="@+id/button_dp"
                android:layout_alignParentLeft="true"
                android:textColor="#d1d1d1"/>

            <Button
                android:id="@+id/button_fxi"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/fenxiang"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/button_dp"
                android:layout_marginTop="40dp"
                />
            <TextView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:text="分享"
                android:gravity="center"
                android:layout_below="@+id/button_fxi"
                android:layout_alignParentLeft="true"
                android:textColor="#d1d1d1"/>

            <Button
                android:id="@+id/button_xg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/xiugai"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/button_fxi"
                android:layout_marginTop="40dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="修改登"
                android:gravity="center"
                android:layout_below="@+id/button_xg"

                android:textColor="#d1d1d1"/>

            <Button
                android:id="@+id/button_yh"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/yinhang"
                android:layout_alignParentRight="true"
                android:layout_below="@id/mine_set"
                />
            <TextView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:text="银行卡"
                android:gravity="center"
                android:layout_below="@+id/button_yh"
                android:layout_alignParentRight="true"
                android:textColor="#d1d1d1"/>

            <Button
                android:id="@+id/button_dz"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/dizhi"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/button_yh"
                android:layout_marginTop="40dp"
                />
            <TextView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:text="地址"
                android:gravity="center"
                android:layout_below="@+id/button_dz"
                android:layout_alignParentRight="true"
                android:textColor="#d1d1d1"/>
            <Button
                android:id="@+id/button_gy"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/guanyu"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/button_dz"
                android:layout_marginTop="40dp"
                />
            <TextView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:text="关于"
                android:gravity="center"
                android:layout_below="@+id/button_gy"
                android:layout_alignParentRight="true"
                android:textColor="#d1d1d1"/>
            <Button
                android:id="@+id/button_jy"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/jianyi"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/button_gy"
                android:layout_marginTop="40dp"
                />
            <TextView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:text="建议"
                android:gravity="center"
                android:layout_below="@+id/button_jy"
                android:layout_alignParentRight="true"
                android:textColor="#d1d1d1"/>

            <Button
                android:id="@+id/button_sj"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shouji"
                android:layout_below="@id/mine_set"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:text="手机"
                android:gravity="center"
                android:layout_below="@+id/button_sj"
                android:layout_alignLeft="@id/button_sj"
                android:textColor="#d1d1d1"/>
            <Button
                android:id="@+id/button_dd"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/dingdan"
                android:layout_below="@id/button_sj"
                android:layout_alignTop="@id/button_dp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:text="订单"
                android:gravity="center"
                android:layout_below="@+id/button_dd"
                android:layout_alignLeft="@id/button_dd"
                android:textColor="#d1d1d1"/>

            <Button
                android:id="@+id/button_gg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/gonggao"
                android:layout_below="@id/button_dd"
                android:layout_alignTop="@id/button_fxi"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:text="公告"
                android:gravity="center"
                android:layout_below="@+id/button_gg"
                android:layout_alignLeft="@id/button_gg"
                android:textColor="#d1d1d1"/>

            <Button
                android:id="@+id/button_xgzf"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/xiugaizhifu"
                android:layout_below="@id/button_gg"
                android:layout_alignTop="@id/button_xg"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="修改付"
                android:gravity="center"
                android:layout_below="@+id/button_xgzf"
                android:layout_alignLeft="@id/button_xgzf"
                android:textColor="#d1d1d1"/>

            <Button
                android:id="@+id/button_bb"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/banben"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/button_xg"
                android:layout_marginTop="40dp"
                />
            <TextView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:text="版本"
                android:gravity="center"
                android:layout_below="@+id/button_bb"
                android:layout_alignParentLeft="true"
                android:textColor="#d1d1d1"/>

        </RelativeLayout>
        <Button
            android:id="@+id/button_exit"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="退出登录"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="#000000"
            android:background="@drawable/shapebtn"/>
    </LinearLayout>

</ScrollView>

